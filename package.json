{
  "name": "node_boiler",
  "author": "Sean Cotter <sd.cotter45@gmail.com>",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app/index.js",
  "scripts": {
    "build": "tsc && cp -r ./package.json ./dist/package.json",
    "dev": "export NODE_ENV=development && nodemon --exec ts-node ./app/index.ts",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "format:check": "prettier --check '**/*.{ts,js,json}'",
    "lint": "eslint --ext .ts ./app --fix",
    "lint:check": "eslint --ext .ts ./app",
    "start": "export NODE_ENV=production && node ./dist/app/index.js",
    "test": "jest --watchAll=true",
    "test:coverage": "jest --coverage --watchAll=false",
    "update": "ncu -u && npm install"
  },
  "dependencies": {
    "pino": "^8.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.6.2",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
